set nocompatible
set history=1000
set expandtab 
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent
set showtabline=2
set laststatus=2
set showmatch
set backspace=indent,eol,start

set incsearch
set hlsearch
set ignorecase smartcase

set cursorline

set numberwidth=2
set winwidth=79

set shell=bash

colorscheme elflord
filetype plugin on
syntax on

