	email = bart@thesoftwarecraft.com
	signingkey = 582D3883
[core]
	autocrlf = input
	safecrlf = true
	excludesfile = ~/gitignore
[color]
	ui = auto
[alias]
	st = status
	ci = commit --verbose
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	fixup = commit --amend --no-edit
	unstage = reset HEAD
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all
	b = branch
	cp = cherry-pick

	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	r = !git l -30
	ra = !git r --all
	head = !git l -1
	h = !git head

	graph = log --graph --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %C(white)%s%Creset' --all

[merge]
        conflictstyle = diff3
	stat = true
[diff]
	renames = true
	mnemonicprefix = true
[push]
	default = current
[advice]
	statusHints = false
[gpg]
	program = gpg2
[commit]
	gpgsign = true
