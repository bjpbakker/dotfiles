[user]
	name = Bart Bakker
	signingkey = 582D3883
[core]
	editor = vim
	autocrlf = input
	safecrlf = true
	excludesfile = ~/gitignore
[color]
	ui = auto
[alias]
	st = status
	ci = commit --verbose
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	fixup = commit --amend --no-edit
	unstage = reset HEAD
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all
	b = branch
	cp = cherry-pick

	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	r = !git l -30
	ra = !git r --all
	head = !git l -1
	h = !git head

	graph = log --graph --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %C(white)%s%Creset' --all

[merge]
	stat = true
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false
[diff]
	tool = vimdiff
	guitool = p4diff
	prompt = false
	renames = true
	mnemonicprefix = true
[difftool "p4diff"]
	cmd= p4merge "$LOCAL" "$REMOTE"
[push]
	default = current
[advice]
	statusHints = false
[gpg]
	program = gpg2
